<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/listMakanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/nmMakanan" />

    <TextView
        android:id="@+id/listHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="0"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/listTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="0"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/listJumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="0"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <ImageButton
        android:id="@+id/listTambah"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/triangle_up"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageButton
        android:id="@+id/listKurang"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/triangle_down"
        tools:ignore="ContentDescription,RtlHardcoded" />
</LinearLayout>